/**
 * Implements hook_install().
 */
function imagex_superuser_install() {
  $account = user_load(1);
  $account->data['admin_select'] = 'admin_menu';
  user_save($account);
  if (function_exists('drush_log')) {
    drush_log(__FUNCTION__, 'ok');
  }
}

